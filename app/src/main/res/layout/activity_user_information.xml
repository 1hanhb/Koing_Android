<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="360dp"
            android:layout_height="640dp"
            android:background="@drawable/bg_mypage"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/back_button_in_profile"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/btn_close"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="8dp"
                    android:text="Profile"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profile_image_view11"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="42dp"
                    android:layout_width="116dp"
                    android:layout_height="116dp"
                    android:background="#fcfc0d"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/profile_name_text_view11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1c1c1c"
                        android:textStyle="bold"
                        android:layout_marginTop="47dp"
                        android:layout_marginBottom="4dp"
                        android:textSize="20sp"
                        />


                    <TextView
                        android:id="@+id/profile_nation_language_text_view11"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="13sp"
                        android:textColor="#1c1c1c"
                        />

                    <Button
                        android:id="@+id/send_message_button11"
                        android:layout_width="180dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_send_message"/>
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="Language"
                android:textColor="#1c1c1c"
                android:textStyle="bold"
                android:layout_marginLeft="24dp"
                android:textSize="16sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="9dp">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/profile_language1_text_view11"
                    android:layout_width="100dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="-6dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="28dp"
                    android:gravity="center"
                    android:text="English"
                    android:textSize="14sp"
                    android:background="@drawable/img_textbox"
                    android:textColor="#000000" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/profile_language2_text_view11"
                    android:layout_width="100dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="-8dp"
                    android:layout_marginTop="-6dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="28dp"
                    android:gravity="center"
                    android:text="Spanish"
                    android:textSize="14sp"
                    android:background="@drawable/img_textbox"
                    android:textColor="#000000"
                    />



                <Button
                    android:layout_width="63dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="-8dp"
                    android:background="@android:color/transparent"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Introduction"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/introduction_text_view11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:paddingTop="25dp"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:paddingBottom="35dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:lineSpacingExtra="6sp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:background="@drawable/img_textbox" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="13dp"
                android:text="Trip Card"
                android:textColor="#1c1c1c"
                android:textSize="16sp"
                android:textStyle="bold" />



            <LinearLayout
                android:visibility="gone"
                android:id="@+id/card_layout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="9dp"
                android:paddingTop="18dp"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:paddingBottom="34dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/img_textbox">
                <TextView
                    android:id="@+id/card_area_text11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/card_type_text11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="#808080"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/card_lang_text11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/card_layout22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-10dp"
                android:paddingTop="18dp"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:paddingBottom="34dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/img_textbox">
                <TextView
                    android:id="@+id/card_area_text22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/card_type_text22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="#808080"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/card_lang_text22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/card_layout33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-10dp"
                android:paddingTop="18dp"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:paddingBottom="34dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/img_textbox">
                <TextView
                    android:id="@+id/card_area_text33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/card_type_text33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="#808080"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/card_lang_text33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>