<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/tour_info_filter_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/btn_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:textSize="28sp"
            android:textColor="#000000"
            android:text="Filter"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="51dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="Area"/>

    <Spinner
        android:id="@+id/tour_info_filter_area_spinner"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/btn_tour_info_filter_spinner"
        android:entries="@array/area">

    </Spinner>

    <TextView
        android:layout_width="312dp"
        android:layout_height="1dp"
        android:layout_marginTop="9dp"
        android:background="#000000"
        android:layout_gravity="center"/>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="26dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="Type"/>

    <Spinner
        android:id="@+id/tour_info_filter_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/btn_tour_info_filter_spinner"
        android:entries="@array/tour_type">
    </Spinner>

    <TextView
        android:layout_width="312dp"
        android:layout_height="1dp"
        android:layout_marginTop="9dp"
        android:background="#000000"
        android:layout_gravity="center"/>


</LinearLayout>